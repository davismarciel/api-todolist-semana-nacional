# Database
DATABASE_URL="postgresql://user:password@host:port/database"

# Application
PORT=3000
NODE_ENV=development

# OpenTelemetry Configuration
OTEL_SERVICE_NAME=api-todolist-sndt
OTEL_SERVICE_VERSION=1.0.0

# OTLP Endpoints (gRPC protocol - porta 4317)
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
OTEL_EXPORTER_OTLP_TRACES_ENDPOINT=http://localhost:4317
OTEL_EXPORTER_OTLP_METRICS_ENDPOINT=http://localhost:4317

# Optional: Headers para autenticação (não funciona com gRPC, use metadata no código)
# Para gRPC, configure via código em tracing.ts usando Metadata

# Optional: Protocol
OTEL_EXPORTER_OTLP_PROTOCOL=grpc
